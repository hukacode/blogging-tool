{
  "name": "blogging-tool",
  "displayName": "Blogging tool",
  "description": "A blogging tool",
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.56.0"
  },
  "publisher": "Huka",
  "repository": {
    "type": "git",
    "url": "https://github.com/hukacode/blogging-tool.git"
  },
  "homepage": "https://github.com/hukacode/blogging-tool/blob/main/README.md",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "license": "MIT",
  "keywords": [
    "markdown",
    "digital garden",
    "note"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blogging-tool.changeUpdatedDate",
        "title": "blogging-tool: Change Updated Date"
      },
      {
        "command": "blogging-tool.addTwoSpacesAtTheEndSentence",
        "title": "blogging-tool: Add 2 spaces at the end of sentence"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "blogging-tool configuration",
      "properties": {
        "blogging-tool.enableAddingSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatically adding 2 spaces at the end of sentences"
        },
        "blogging-tool.updatedDateFieldName": {
          "type": "string",
          "default": "lastmod",
          "description": "Name of updated date field in front matter"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
